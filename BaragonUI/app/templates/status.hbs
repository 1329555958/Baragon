{{#if synced}}
    <div class="row-fluid">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-md-2">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <h4>Worker Lag <span class="badge">{{ status.workerLagMs }} ms</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="col-md-3">
                                    <h4>Global ZK State Node Size</h4>
                                </div>
                                <div class="col-md-2">
                                    <h4>{{humanizeFileSize status.globalStateNodeSize}} used</h4>
                                </div>
                                <div class="col-md-7">
                                    <div class="progress">
                                        <span class="progress-bar progress-bar-info progress-bar-striped" style="width: {{roundedPercentage status.globalStateNodeSize 1048576}}%;"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-md-4">
                        <h4>BaragonService Workers</h4>
                        <ul class="list-group">
                            {{#each workers}}
                                <li class="list-group-item">
                                    {{ this }}

                                </li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="col-md-8">
                        <h4>Pending Requests</h4>
                        <ul class="list-group">
                            {{#each queued}}
                                <li class="list-group-item">
                                    <a title="{{ requestId }}" href="{{appRoot}}/requests/{{ requestId }}">
                                        {{ requestId }}
                                    </a>
                                </li>
                            {{else}}
                                <div class="empty-table-message"><p>No pending requests</p></div>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <input type="search" class="big-search-box" placeholder="Enter a RequesId" value="{{ requestId }}" required />
        </div>
    </div>
{{else}}
    <div class="page-loader centered cushy"></div>
{{/if}}
